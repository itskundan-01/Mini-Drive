# Copy this file to .env and fill in your actual values
# Do not commit the actual .env file to git!

# Environment
NODE_ENV=development

# Server Port
PORT=5001

# MongoDB Connection String
# Local MongoDB: mongodb://localhost:27017/mini-drive
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/mini-drive
MONGO_URI=your_mongodb_connection_string

# JWT Secret - Use a long, random string for security
# You can generate one at: https://www.grc.com/passwords.htm
JWT_SECRET=your_super_secret_jwt_key

# Cloudinary Configuration
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# CORS Origin (Frontend URL)
# Development: http://localhost:5173
# Production: https://your-app.vercel.app
CORS_ORIGIN=http://localhost:5173
